&GLOBAL
  PROJECT cp2k-sp
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL

&MOTION
   &MD
     &REFTRAJ
       TRAJ_FILE_NAME dump.xyz
       CELL_FILE_NAME dump.cell
       VARIABLE_VOLUME
       EVAL_ENERGY_FORCES
     &END REFTRAJ
     STEPS 1000
     STEP_START_VAL 1
   &END MD
   &PRINT
     &TRAJECTORY
       FORMAT XYZ
       &EACH
         MD 20
       &END EACH
     &END TRAJECTORY
     &FORCES ON
       FORMAT XYZ
       &EACH
         MD 20
       &END EACH
     &END FORCES
   &END PRINT
&END MOTION

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    &QS
      EPS_DEFAULT 1.0E-13
      EXTRAPOLATION ASPC
      EXTRAPOLATION_ORDER 2
    &END QS
    &MGRID
      CUTOFF 400
      NGRIDS 5
      REL_CUTOFF 30
    &END MGRID
    &XC
      &XC_FUNCTIONAL
        &PBE
          PARAMETRIZATION REVPBE
        &END PBE
      &END XC_FUNCTIONAL
      &XC_GRID
        XC_DERIV NN10_SMOOTH
        XC_SMOOTH_RHO NN10
      &END XC_GRID
      &VDW_POTENTIAL
        &PAIR_POTENTIAL
          PARAMETER_FILE_NAME dftd3.dat
          TYPE DFTD3
          REFERENCE_FUNCTIONAL PBE
          R_CUTOFF [angstrom] 16
        &END
      &END VDW_POTENTIAL
    &END XC
    &SCF
      EPS_SCF 1.0E-6
      MAX_SCF 100
      &OT ON
        PRECONDITIONER FULL_SINGLE_INVERSE
        MINIMIZER DIIS
        ENERGY_GAP 0.1
        STEPSIZE 0.1
      &END OT
      &OUTER_SCF
        MAX_SCF 10
      &END OUTER_SCF
    &END SCF
  &END DFT
  &SUBSYS
    &KIND H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND C
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
    &KIND N
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
